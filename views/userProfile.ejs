<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Profile Page</title>
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/navbar.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <%- include('partials/navbar'); %>
  
  <!-- Flash Messages -->
  <% if (success_msg && success_msg.length > 0) { %>
    <% success_msg.forEach(function(msg){ %>
      <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
        <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% }) %>
  <% } %>

  <% if (error_msg && error_msg.length > 0) { %>
    <% error_msg.forEach(function(msg){ %>
      <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
        <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% }) %>
  <% } %>
  
  <div class="text-center card border my-4">
    <h1>Welcome to your profile, <b><%= user.username %></b>!</h1>
  </div>
  
  <div class="container mt-5">
    <h2 class="text-center mb-4">Your Appointments</h2>

    <!-- Appointments as Student -->
    <div class="mb-5">
      <h3>Your Appointments as Student</h3>
      <ul class="list-group">
        <% if (studentAppointments.length > 0) { %>
          <% studentAppointments.forEach(appointment => { %>
            <li class="list-group-item">
              <strong>Tutor:</strong> <%= appointment.tutorId.username %> (<%= appointment.tutorId.email %>) <br>
              <strong>Date:</strong> <%= new Date(appointment.day).toLocaleDateString() %> <br>
              <strong>Time:</strong> <%= appointment.time %> <br>
              <strong>Status:</strong> 
              <span class="badge 
                <% if (appointment.status === 'Pending') { %>
                  bg-warning text-dark
                <% } else if (appointment.status === 'Confirmed') { %>
                  bg-success
                <% } else if (appointment.status === 'Completed') { %>
                  bg-primary
                <% } else if (appointment.status === 'Cancelled') { %>
                  bg-danger
                <% } %>
              ">
                <%= appointment.status %>
              </span> <br>
              <strong>Details:</strong> <%= appointment.details %> <br>
    
              <!-- Add "Write a Review" button if status is Completed -->
              <% if (appointment.status === 'Completed') { %>
                <div class="mt-2">
                  <a href="/appointments/<%= appointment._id %>/review" class="btn btn-outline-primary btn-sm">
                    Write a Review
                  </a>
                </div>
              <% } %>
            </li>
          <% }) %>
        <% } else { %>
          <li class="list-group-item">You have no appointments as a student.</li>
        <% } %>
      </ul>
    </div>

    <!-- Appointments as Tutor -->
    <div class="mb-5">
      <h3>Your Appointments as Tutor</h3>
      <ul class="list-group">
        <% if (tutorAppointments.length > 0) { %>
          <% tutorAppointments.forEach(appointment => { %>
            <li class="list-group-item">
              <strong>Student:</strong> <%= appointment.studentId.username %> (<%= appointment.studentId.email %>) <br>
              <strong>Date:</strong> <%= new Date(appointment.day).toLocaleDateString() %> <br>
              <strong>Time:</strong> <%= appointment.time %> <br>
              <strong>Status:</strong> 
              <span class="badge 
                <% if (appointment.status === 'Pending') { %>
                  bg-warning text-dark
                <% } else if (appointment.status === 'Confirmed') { %>
                  bg-success
                <% } else if (appointment.status === 'Completed') { %>
                  bg-primary
                <% } else if (appointment.status === 'Cancelled') { %>
                  bg-danger
                <% } %>
              ">
                <%= appointment.status %>
              </span> <br>
              <strong>Details:</strong> <%= appointment.details %> <br>

              <% if (appointment.status === 'Pending') { %>
                <div class="mt-2">
                  <!-- Accept Button -->
                  <form action="/appointments/<%= appointment._id %>/accept" method="POST" style="display:inline;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-success btn-sm">Accept</button>
                  </form>
                  <!-- Reject Button -->
                  <form action="/appointments/<%= appointment._id %>/reject" method="POST" style="display:inline;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                  </form>
                </div>
              <% } %>
              <% if (appointment.status === 'Confirmed') { %>
                <form action="/appointments/<%= appointment._id %>/complete" method="POST" style="display:inline;">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <button type="submit" class="btn btn-primary btn-sm">Complete</button>
                </form>
              <% } %>
            </li>
          <% }) %>
        <% } else { %>
          <li class="list-group-item">You have no appointments as a tutor.</li>
        <% } %>
      </ul>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>