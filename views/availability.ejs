<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Availability Page</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/navbar.css">
</head>
<body>
  <%- include('partials/navbar'); %>

  <h2 class="text-center mb-4">Update Your Availability</h2>

  <form action="/user/availability" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>Day</th>
          <th>Available</th>
          <th>Start Time</th>
          <th>End Time</th>
        </tr>
      </thead>
      <tbody>
        <% const days = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday']; %>
        <% days.forEach(day => { %>
          <tr>
            <td><%= day %></td>
            <td>
              <select name="availability[<%= day %>][available]" class="form-select">
                <option value="true" selected>Available</option>
                <option value="false">Not Available</option>
              </select>
            </td>
            <td>
              <input type="time" name="availability[<%= day %>][startTime]" class="form-control" value="09:00">
            </td>
            <td>
              <input type="time" name="availability[<%= day %>][endTime]" class="form-control" value="17:00">
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="text-center">
      <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
  </form>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
